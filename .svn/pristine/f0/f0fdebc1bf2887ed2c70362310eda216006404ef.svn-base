.m-r-15 {
  margin-right: 15px;
}

.m-r-10 {
  margin-right: 10px;
}

.admin-blogroll {
  min-width: 1200px;
  overflow-x: auto;
  height: auto;
  background: #F5F8FA;
  padding: 40px 16px;
}

.admin-blogroll h2.title {
  border-left: 5px solid #2E4769;
  text-indent: 20px;
  color: #2E4769;
  font-size: 22px;
}

.admin-blogroll .admin-blogroll-add {
  overflow: hidden;
}

.admin-blogroll .blogroll-add-btn {
  width: 110px;
  height: 40px;
  text-align: center;
  line-height: 27px;
  font-size: 14px;
  color: #fff;
  float: right;
  background: #71C945;
  margin-right: 15px;
  transition: all 0.1s linear;

}

.admin-blogroll .blogroll-add-btn:hover {
  background: #8ac984;
}

.admin-blogroll table {
  width: 100%;
  height: auto;
  margin-top: 20px;
}

.admin-blogroll table th, .admin-blogroll table td {
  font-size: 16px;
  color: #2E4769;
  text-align: center;
  height: 60px;
}

.admin-blogroll table tr:nth-child(odd) {
  background: #fff;
}

.admin-blogroll table tr:nth-child(even) {
  background: #F8FAFE;
}

.admin-blogroll table th {
  background: #DFE7F3;
}

.admin-blogroll table td .p1 {
  max-width: 500px;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.admin-blogroll table td .p2 {
  max-width: 150px;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.admin-blogroll table td span {
  display: inline-block;
  width: 25%;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  cursor: pointer;
}

.admin-blogroll table td p {
  max-width: 480px;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.admin-blogroll table td .edit {
  background: #DFE7F3;
  font-size: 14px;
  color: #5070B8;

}

.admin-blogroll table td .see {
  background: #FFF4D5;
  font-size: 14px;
  color: #EFB920;
}

.admin-blogroll table td .delete {
  background: #FFEEEF;
  font-size: 14px;
  color: #F65B79;
}

.paging {
  margin: 20px auto;
  text-align: center;
}

.paging .el-pagination .el-pager li, .el-pagination button, .el-pagination span:not([class*=suffix]) {
  min-width: 50px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
}

.el-input--mini .el-input__inner {
  height: 40px;
  line-height: 40px;
}

.el-pagination .el-select .el-input {
  margin-left: 15px;
}

.url_list {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 50px;
}

.url_list li {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 20px;
  position: relative;
}

.url_list li .li-txt {
  display: inline-block;
  height: 40px;
  line-height: 40px;
  text-align: right;
  width: 100px;
  margin-right: 15px;
  font-size: 14px;
  color: #2E4769;
}

.url_list li .li-txt label {
  color: #F65B79;
  font-size: 14px;
}

.url_list li input {
  width: 80%;
  height: 40px;
  border: 1px solid #dcdfe6;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  padding: 0 10px;
  outline: none;
}

.admin-blogroll-add-save {
  width: 120px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  color: #fff;
  background: #71C945;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  cursor: pointer;
  margin: 50px auto;
}
