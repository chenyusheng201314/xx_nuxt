.company {
  width: 100%;
  min-height: 100%;
  background: #F9F9FC;
  padding: 35px 60px;
  overflow: hidden;
}

.company h2 {
  color: #495C60;
  font-size: 26px;
}

.company .eng-name {
  color: #878C90;
  font-size: 16px;
  margin-bottom: 20px;
}

.el-row {
  margin-bottom: 20px;
}

el-row:last-child {
  margin-bottom: 0;
}

.el-col {
  border-radius: 4px;
}

.bg-purple {
  background: #fff;
}

.grid-content {
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  min-height: 36px;
}

.row-bg {
  padding: 10px 0;
  background-color: #f9fafc;
}

.company .info-top {
  width: 100%;
  height: 70px;
  line-height: 70px;
  background: #fff;
  border-bottom: 1px solid #DDDDDD;
}

.company .info-top .span-left {
  float: left;
  margin-left: 30px;
  font-size: 16px;
  color: #495C60;
}

.company .info-top .span-right {
  float: right;
  margin-right: 50px;
  color: #FB9500;
  font-size: 16px;
  cursor: pointer;
}

.company .info-bottom {
  width: 100%;
  height: auto;
  background: #fff;
  padding: 40px 30px;
  margin-bottom: 0;
}

.company .info-bottom li {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 20px;
}

.company .info-bottom li:first-child {
  margin-top: 0;
}

.company .info-bottom li .li-name {
  width: 80px;
  overflow: hidden;
  display: inline-block;
  color: #BCBBC0;
  font-size: 14px;
}

.company .info-bottom li .li-con {
  width: calc(100% - 80px);
  overflow: hidden;
  display: inline-block;
  color: #495C60;
  font-size: 14px;
  padding-left: 10px;
}
