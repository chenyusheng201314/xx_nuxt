.open-static-con{
  width: 100%;
}
.open-static-content {
  margin-left: -15px;
  margin-right: -15px;
  justify-content: center;
  align-items: center;
}
@keyframes att {
  0%{
    transform: translateY(0);
  }
  25%{
    transform: translateY(-10px);
  }
  50%{
    transform: translateY(0);
  }
  75%{
    transform: translateY(10px);
  }
  100%{
    transform: translateY(0px);
  }
}
@keyframes myfirst {
  0% { transform: translate(0px, 0px); }
  50% { transform: translate(0px, -15px); }
  100% { transform: translate(0px, 0px);}
}

